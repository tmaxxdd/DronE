<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/switch_layout_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_black_24dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/switch_layout_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Drone"
        android:textSize="24sp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/textColorPrimary"
        android:layout_alignBottom="@+id/switch_layout_menu"
        android:layout_toRightOf="@id/switch_layout_menu"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/switch_layout_sun_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:src="@drawable/ic_wb_sunny_black_24dp" />

        <com.rey.material.widget.Switch
            android:id="@+id/switch_layout_switch"
            style="@style/switchStyled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toRightOf="@id/switch_layout_sun_icon"
            android:checked="false"
            android:gravity="center" />

        <ImageView
            android:id="@+id/switch_layout_night_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/switch_layout_switch"
            android:src="@drawable/ic_weather_night_black_24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_alignBottom="@+id/switch_layout_switch" />

    </RelativeLayout>

</RelativeLayout>