<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimaryDark">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_drone_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

        <EditText
            android:layout_below="@id/add_drone_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_drone_edittext"
            android:textSize="24sp"
            android:text="Simple drone name"
            android:textColor="?attr/colorPrimary"
            android:layout_margin="16dp" />

        <com.rey.material.widget.EditText
            android:id="@+id/editText"
            app:et_inputId="@+id/add_drone_edittext"
            app:et_labelEnable="true"
            app:et_helper="Helper"
            app:et_labelTextColor="@color/colorAccent"
            app:et_dividerColor="@color/colorAccent"
            app:et_labelTextSize="14sp"
            app:et_supportMaxChars="24"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

</RelativeLayout>